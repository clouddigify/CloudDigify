{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.clouddigify.com"
        }
      ],
      "status": 301,
      "headers": {
        "Location": "https://clouddigify.com/$1"
      }
    },
    {
      "src": "/(.*)",
      "has": [
        {
          "type": "header",
          "key": "x-forwarded-proto",
          "value": "http"
        }
      ],
      "status": 301,
      "headers": {
        "Location": "https://clouddigify.com/$1"
      }
    },
    {
      "src": "/api/simple",
      "dest": "/api/simple.js"
    },
    {
      "src": "/api/auth/login",
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/content",
      "dest": "/api/content.js"
    },
    {
      "src": "/api/content/(.*)",
      "dest": "/api/content.js?path=$1"
    },
    {
      "src": "/api/menus",
      "dest": "/api/menus.js"
    },
    {
      "src": "/api/menus/(.*)",
      "dest": "/api/menus.js?path=$1"
    },
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)\\.(.+)",
      "dest": "/$1.$2"
    },
    {
      "src": "/(.*)",
      "headers": {
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "X-Content-Type-Options": "nosniff",
        "Referrer-Policy": "strict-origin-when-cross-origin",
        "Permissions-Policy": "camera=(), microphone=(), geolocation=()",
        "Strict-Transport-Security": "max-age=63072000; includeSubDomains; preload"
      },
      "dest": "/index.html"
    }
  ]
} 